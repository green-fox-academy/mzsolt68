@model List<Todo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">Todos for the day</div>
    <div class="panel-body">
        <div class="btn-group">
            <a class="btn btn-primary" href="Add"><i class="glyphicon glyphicon-plus"></i> Add new todo</a>
            <a class="btn btn-default" href="Assignee"><i class="glyphicon glyphicon-list"></i> Assignee list</a>
        </div>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <td><h4>ID</h4></td>
            <td><h4>ACTION</h4></td>
            <td><h4>URGENT</h4></td>
            <td><h4>DONE</h4></td>
            <td><h4>ACTIONS</h4></td>

            </thead>
            @foreach (var todo in Model)
            {
                <tr>
                    <td>@todo.Id</td>
                    <td>@todo.Title</td>
                    <td>@todo.IsUrgent</td>
                    <td>@todo.IsDone</td>
                    <td>
                        <a class="btn btn-danger" href="@todo.Id/delete"><i class="glyphicon glyphicon-trash"></i> Delete</a>
                        <a class="btn btn-info" href="@todo.Id/edit"><i class="glyphicon glyphicon-pencil"></i> Edit</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>