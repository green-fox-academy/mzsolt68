@model Assignee
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">Todos of @Model.Name</div>
    <div class="panel-body">
        <div class="btn-group">
            <a class="btn btn-default" href="/Assignee"><i class="glyphicon glyphicon-list"></i> Assignee list</a>
        </div>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <td><h4>ID</h4></td>
            <td><h4>ACTION</h4></td>
            <td><h4>URGENT</h4></td>
            <td><h4>DONE</h4></td>
            </thead>
            @foreach (var todo in Model.AssignedTodos)
            {
            <tr>
                <td>@todo.Id</td>
                <td>@todo.Title</td>
                <td>@todo.IsUrgent</td>
                <td>@todo.IsDone</td>
            </tr>
            }
        </table>
    </div>
</div>